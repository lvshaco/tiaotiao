#!/bin/bash

tar -zcf tiaotiao.tgz \
    config.js.def \
    start \
    client.js \
    package.json \
    src \
    node_modules

scp tiaotiao.tgz agar:
ssh agar "mkdir -pv tiaotiao && tar -mzxf tiaotiao.tgz -C tiaotiao && ./tiaotiao/start 1448 1>/dev/null";

scp tiaotiao.tgz agar1:
ssh agar1 "mkdir -pv tiaotiao && tar -mzxf tiaotiao.tgz -C tiaotiao && ./tiaotiao/start 1449 1>/dev/null";

rm -rf tiaotiao.tgz
